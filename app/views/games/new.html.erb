<h1>NEW GAME</h1>
<p>*********** Welcome to the longest-word game! ***********</p>
<p>Here is your grid</p>
<%@array.each do |value|%>
  <%=value.upcase%>
<%end%>
<form action="/score">
  <label for="word">What is the longest word you can find?</label>
  <input type="text" name="word">
  <input type="submit" value="Play now!">
  <input type="hidden" name="array" value="<%=@array.join(",")%>">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
</form>
