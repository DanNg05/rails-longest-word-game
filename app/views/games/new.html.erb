<div class='new'>
  <h1>NEW GAME</h1>
  <p>*********** Welcome to the longest-word game! ***********</p>
  <p>Here is your grid</p>
  <div class="grid">

    <%@array.each do |value|%>
      <p id="letter"><%=value.upcase%></p>
    <%end%>
  </div>
  <form action="/score">
    <label for="word" class="form-label">What is the longest word you can find?</label>
    <input type="text" name="word">
    <input type="submit" value="Play now!" class="btn btn-primary">
    <input type="hidden" name="array" value="<%=@array.join(",")%>">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  </form>
</div>
